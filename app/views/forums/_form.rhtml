<% form_for @forum do |form| %>
    <%= error_messages_for "forum" %>
    <%= render :partial => "/layouts/fields/text_field_row", :locals => { :form => form, :fieldname => :name } %>
    <%= render :partial => "/layouts/fields/text_area_row", :locals => { :form => form, :fieldname => :description, :rows => 8 } %>
    <div class="form_row">
        <%= render :partial => "/layouts/buttons/submit_button" %>
        <%= render :partial => "/layouts/buttons/cancel_button" %>
    </div>
    <div class="spacer h15"></div>
<% end %>